{
  "openai": {
    "api_key": "",
    "model": "gpt-3.5-turbo",
    "max_tokens": 1000
  },
  "pdf": {
    "engine": "weasyprint",
    "fallback_engines": [
      "chrome_headless",
      "wkhtmltopdf"
